@model IEnumerable<TinhLam.ViewModels.ProductVM>
@{
    Layout = "_DanhSachSanPham";
}

@section BreadCum {
    <div class="container-fluid page-header py-5 text-center" style="background: url('/images/banner3.jpg') center/cover; color: white;">
        <h1 class="display-6 fw-bold">Shop</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="/" class="text-light">Home</a></li>
            <li class="breadcrumb-item"><a href="#" class="text-light">Pages</a></li>
            <li class="breadcrumb-item active text-white">Shop</li>
        </ol>
    </div>
}

<div class="container py-5">
    <h6 class="mb-4">
        Có <span class="text-primary fw-bold">@ViewBag.TotalProducts</span> sản phẩm
        @if (!string.IsNullOrEmpty(ViewBag.Query))
        {
            <span>cho từ khóa "<span class="text-primary fw-bold">@ViewBag.Query</span>"</span>
        }
    </h6>
    
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-md-3 col-6 mb-4">
                <a asp-controller="Home" asp-action="DetailProduct" asp-route-id="@product.MaProduct" class="product-card-link">
                    <div class="product-card-v2">
                        <div class="product-card-img-wrap">
                            <img src="~/images/@product.Hinh" alt="@product.TenProduct" class="product-card-img" />
                            <span class="product-badge">NEW</span>
                        </div>
                        <div class="product-card-info">
                            <div class="product-card-title">@product.TenProduct</div>
                            <div class="product-card-price">@product.Price.ToString("N0") VND</div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav class="mt-5">
            <ul class="pagination justify-content-center">
                @{
                    int currentPage = ViewBag.CurrentPage;
                    int totalPages = ViewBag.TotalPages;
                    int startPage = Math.Max(1, currentPage - 2);
                    int endPage = Math.Min(totalPages, currentPage + 2);
                }

                <!-- Previous button -->
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link rounded-pill" href="@Url.Action("Category", "Categories", new {
                            id = (ViewBag.CategoryId != null && (int)ViewBag.CategoryId != 0) ? ViewBag.CategoryId : null,
                            maxPrice = ViewBag.MaxPrice,
                            query = ViewBag.Query,
                            page = currentPage - 1 })">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link rounded-pill">
                            <i class="fas fa-chevron-left"></i>
                        </span>
                    </li>
                }

                <!-- Page numbers -->
                @for (int i = startPage; i <= endPage; i++)
                {
                    if (i == currentPage)
                    {
                        <li class="page-item active">
                            <span class="page-link rounded-pill">@i</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link rounded-pill" href="@Url.Action("Category", "Categories", new {
                                id = (ViewBag.CategoryId != null && (int)ViewBag.CategoryId != 0) ? ViewBag.CategoryId : null,
                                maxPrice = ViewBag.MaxPrice,
                                query = ViewBag.Query,
                                page = i })">@i</a>
                        </li>
                    }
                }

                <!-- Next button -->
                @if (currentPage < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link rounded-pill" href="@Url.Action("Category", "Categories", new {
                            id = (ViewBag.CategoryId != null && (int)ViewBag.CategoryId != 0) ? ViewBag.CategoryId : null,
                            maxPrice = ViewBag.MaxPrice,
                            query = ViewBag.Query,
                            page = currentPage + 1 })">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link rounded-pill">
                            <i class="fas fa-chevron-right"></i>
                        </span>
                    </li>
                }
            </ul>
        </nav>

        <!-- Page info -->
        <div class="text-center mt-3">
            <small class="text-muted">
                Trang @currentPage / @totalPages 
                
            </small>
        </div>
    }
</div>

<style>
    .product-card-v2 {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 2px 16px rgba(85,22,27,0.08);
        overflow: hidden;
        position: relative;
        transition: box-shadow 0.2s, transform 0.2s;
        margin-bottom: 24px;
        text-align: center;
        padding-bottom: 18px;
    }
    .product-card-v2:hover {
        box-shadow: 0 6px 24px rgba(85,22,27,0.16);
        transform: translateY(-4px) scale(1.03);
    }
    .product-card-img-wrap {
        width: 100%;
        height: 210px;
        overflow: hidden;
        border-radius: 18px 18px 0 0;
        background: #fffbe7;
        position: relative;
    }
    .product-card-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }
    .product-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        background: #fff;
        color: #55161b;
        font-size: 0.85rem;
        font-weight: bold;
        padding: 4px 14px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(85,22,27,0.08);
        letter-spacing: 1px;
    }
    .product-card-info {
        padding: 0 10px;
    }
    .product-card-title {
        font-size: 1.08rem;
        font-weight: 600;
        color: #55161b;
        margin: 18px 0 8px 0;
        min-height: 38px;
        line-height: 1.2;
    }
    .product-card-price {
        color: #8c2a2f;
        font-weight: bold;
        font-size: 1.05rem;
    }
    .product-card-link {
        text-decoration: none;
        color: inherit;
    }
    @@media (max-width: 767px) {
        .product-card-img-wrap { height: 120px; }
        .product-card-title { font-size: 0.98rem; min-height: 28px; }
        .product-card-price { font-size: 0.98rem; }
    }
</style>
