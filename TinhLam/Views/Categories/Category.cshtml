@model IEnumerable<TinhLam.ViewModels.ProductVM>
@{
    Layout = "_DanhSachSanPham";
}

@section BreadCum {
    <div class="container-fluid page-header py-5 text-center" style="background: url('/images/banner3.jpg') center/cover; color: white;">
        <h1 class="display-6 fw-bold">Shop</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="/" class="text-light">Home</a></li>
            <li class="breadcrumb-item"><a href="#" class="text-light">Pages</a></li>
            <li class="breadcrumb-item active text-white">Shop</li>
        </ol>
    </div>
}

<div class="container py-5">
    <h6 class="mb-4">Có <span class="text-primary fw-bold">@Model.Count()</span> sản phẩm</h6>
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="product-card rounded shadow-sm overflow-hidden position-relative">
                    <a asp-controller="Home" asp-action="DetailProduct" asp-route-id="@item.MaProduct" class="d-block">
                        <img src="~/images/@item.Hinh" class="img-fluid w-100 product-image" alt="@item.TenProduct">
                    </a>
                    <div class="p-3 bg-white border-top">
                        <h5 class="text-dark fw-bold">@item.TenProduct</h5>
                        <p class="small text-muted">@item.MoTaNgan</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="gia fs-6 fw-light text-primary" style="color: #55161b;">@item.Price VND</span>
                            
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <nav class="mt-5">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled"><a class="page-link rounded-pill" href="#">&laquo;</a></li>
            <li class="page-item active"><a class="page-link rounded-pill" href="#">1</a></li>
            <li class="page-item"><a class="page-link rounded-pill" href="#">2</a></li>
            <li class="page-item"><a class="page-link rounded-pill" href="#">3</a></li>
            <li class="page-item"><a class="page-link rounded-pill" href="#">&raquo;</a></li>
        </ul>
    </nav>
</div>

<style>
    .product-card {
        transition: transform 0.3s, box-shadow 0.3s;
        
    }
    .gia{
        color: #55161b !important;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.15);
        }

    .product-image {
        transition: transform 0.3s ease-in-out;
        height: 200px; 
    }

    .product-card:hover .product-image {
        transform: scale(1.05);
    }

    .pagination .page-link {
        color: #f5c808;
        border-radius: 50px;
        margin: 0 5px;
    }

    .pagination .active .page-link {
        background-color: #f5c808;
        color: white;
    }
</style>
