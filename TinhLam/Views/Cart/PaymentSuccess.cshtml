@model TinhLam.Data.Order
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container text-center py-5">
    <div class="card shadow-lg rounded-3 p-5" style="background-color: #fdf6e3; max-width: 700px; margin: auto;">
        <div class="text-center mb-4">
            <img src="~/images/success-icon-png.jpg" alt="Success" width="100" class="mb-3">
            <h2 class="text-success fw-bold">Đặt hàng thành công!</h2>
            <p class="text-muted">Cảm ơn bạn đã mua hàng. Chúng tôi sẽ liên hệ sớm để xác nhận đơn hàng.</p>
        </div>

        @if (Model != null)
        {
            <div class="order-details bg-white p-4 rounded-3 mb-4">
                <h5 class="text-primary fw-bold mb-3">Thông tin đơn hàng</h5>
                <div class="row text-start">
                    <div class="col-md-6">
                        <p><strong>Mã đơn hàng:</strong> #@Model.OrderId</p>
                        <p><strong>Ngày đặt:</strong> @Model.OrderDate</p>
                        <p><strong>Phương thức thanh toán:</strong> 
                            @if (Model.PaymentMethod == "COD")
                            {
                                <span class="badge bg-warning text-dark">Thanh toán khi nhận hàng</span>
                            }
                            else
                            {
                                <span class="badge bg-success">PayPal</span>
                            }
                        </p>
                        <p><strong>Trạng thái:</strong> 
                            @if (Model.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Chờ xác nhận</span>
                            }
                            else if (Model.Status == "Processing")
                            {
                                <span class="badge bg-info">Đang xử lý</span>
                            }
                            else
                            {
                                <span class="badge bg-success">@Model.Status</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Khách hàng:</strong> @Model.CustomerName</p>
                        <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
                        <p><strong>Địa chỉ:</strong> @Model.StreetAddress, @Model.Ward, @Model.District, @Model.City</p>
                        <p><strong>Tổng tiền:</strong> <span class="fw-bold text-primary">@Model.TotalAmount.ToString("N0") VND</span></p>
                    </div>
                </div>
                
                @if (Model.DiscountAmount > 0)
                {
                    <div class="mt-3 p-3 bg-success bg-opacity-10 rounded">
                        <p class="mb-1"><strong>Giảm giá từ điểm thưởng:</strong> -@(Model.DiscountAmount?.ToString("N0") ?? "0") VND</p>
                        <p class="mb-0"><small>Đã sử dụng @(Model.RewardPointsUsed?.ToString() ?? "0") điểm thưởng</small></p>
                    </div>
                }
            </div>

            <div class="alert alert-info">
                <h6 class="fw-bold">📞 Liên hệ hỗ trợ</h6>
                <p class="mb-2">Nếu có thắc mắc về đơn hàng, vui lòng liên hệ:</p>
                <p class="mb-1"><strong>Hotline:</strong> 0909 123 456</p>
                <p class="mb-0"><strong>Email:</strong> support@tinhlam.com</p>
            </div>
        }

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn text-white fw-bold me-3" style="background-color: #55161b;">
                <i class="fas fa-shopping-cart me-2"></i>Tiếp tục mua sắm
            </a>
        </div>
    </div>
</div>

<style>
    .order-details {
        border: 1px solid #f0e6d2;
    }
    .text-primary {
        color: #55161b !important;
    }
    .btn-outline-primary {
        border-color: #55161b;
        color: #55161b;
    }
    .btn-outline-primary:hover {
        background-color: #55161b;
        border-color: #55161b;
        color: white;
    }
</style>
