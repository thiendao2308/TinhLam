@model TinhLam.Data.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "_AdminLayout";
}

<h1>Chi tiết đơn hàng</h1>

<div>
    <h4>Thông tin đơn hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên khách hàng</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>

        <dt class="col-sm-2">Số điện thoại</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Địa chỉ giao hàng</dt>
        <dd class="col-sm-10">@Model.ShippingAddress</dd>

        <dt class="col-sm-2">Ngày đặt hàng</dt>
        <dd class="col-sm-10">@Model.OrderDate</dd>

        <dt class="col-sm-2">Tổng tiền</dt>
        <dd class="col-sm-10">@Model.TotalAmount</dd>

        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<h4>Sản phẩm trong đơn hàng</h4>
<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice</td>
                <td>@(item.Quantity * item.UnitPrice)</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>
