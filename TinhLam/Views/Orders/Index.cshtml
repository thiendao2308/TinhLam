@model IEnumerable<TinhLam.Data.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "_AdminLayout";
}

<style>
    .orders-container {
        max-width: 95%;
        margin: auto;
        overflow-x: auto;
        border: 2px solid #55161b;
        border-radius: 8px;
        padding: 10px;
        background: #fff;
    }

    .orders-table {
        width: 100%;
        border-collapse: collapse;
        text-align: left;
    }

        .orders-table thead {
            background: #55161b;
            color: white;
        }

        .orders-table th, .orders-table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .orders-table th {
            border-bottom: 2px solid #f5c808;
        }

        .orders-table tbody tr:hover {
            background: #f9f2e8;
        }

    .total-amount {
        color: #55161b;
        font-weight: bold;
    }

    .btn-details {
        background: #f5c808;
        color: #55161b;
        padding: 5px 10px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        display: inline-block;
    }

        .btn-details:hover {
            background: #d4a307;
        }

    .filter-form {
        margin-bottom: 15px;
        display: flex;
        gap: 10px;
        align-items: center;
        flex-wrap: wrap;
    }

    .btn-filter {
        background: #55161b;
        color: white;
        padding: 5px 10px;
        border-radius: 4px;
        border: none;
        cursor: pointer;
    }

        .btn-filter:hover {
            background: #722025;
        }

    .badge {
        font-size: 11px;
        padding: 4px 8px;
        border-radius: 12px;
        font-weight: bold;
    }

    .bg-warning {
        background-color: #ffc107 !important;
        color: #212529 !important;
    }

    .text-success {
        color: #28a745 !important;
        font-weight: bold;
    }

    .text-muted {
        color: #6c757d !important;
    }
</style>

<h1 style="color: #55161b; text-align: center; margin-bottom: 20px;">Danh sách đơn hàng</h1>
<form method="get" asp-action="Index" asp-controller="Orders" class="filter-form">
    <label for="status">Trạng thái:</label>
    <select name="status" id="status">
        <option value="">-- Tất cả --</option>
        <option value="Pending">Pending</option>
        <option value="Processing">Processing</option>
        <option value="Completed">Completed</option>
        <option value="Cancelled">Cancelled</option>
    </select>

    <label for="startDate">Từ ngày:</label>
    <input type="date" name="startDate" id="startDate">

    <label for="endDate">Đến ngày:</label>
    <input type="date" name="endDate" id="endDate">

    <button type="submit" class="btn-filter">Lọc</button>
</form>
<div class="orders-container">
    <table class="orders-table">
        <thead>
            <tr>
                <th>Khách hàng</th>
                <th>SĐT</th>
                <th>Địa chỉ</th>
                <th>Ngày đặt</th>
                <th>Giờ đặt</th>
                <th>Tổng tiền</th>
                <th>Điểm sử dụng</th>
                <th>Giảm giá</th>
                <th>Trạng thái</th>
                <th>Thanh toán</th>
                <th>Ghi chú</th>
                
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.StreetAddress)</td>
                    <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.OrderTime)</td>
                    <td class="total-amount">@Html.DisplayFor(modelItem => item.TotalAmount) VND</td>
                    <td>
                        @if (item.RewardPointsUsed > 0)
                        {
                            <span class="badge bg-warning">@item.RewardPointsUsed điểm</span>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td>
                        @if (item.DiscountAmount > 0)
                        {
                            <span class="text-success">-@item.DiscountAmount?.ToString("N0") VND</span>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td>
                        <form method="post" asp-action="UpdateStatus" asp-controller="Orders">
                            <input type="hidden" name="orderId" value="@item.OrderId" />
                            <select name="status" onchange="this.form.submit()">
                                <option value="Pending" selected="@(item.Status == "Pending" ? "selected" : null)">Pending</option>
                                <option value="Processing" selected="@(item.Status == "Processing" ? "selected" : null)">Processing</option>
                                <option value="Completed" selected="@(item.Status == "Completed" ? "selected" : null)">Completed</option>
                                <option value="Cancelled" selected="@(item.Status == "Cancelled" ? "selected" : null)">Cancelled</option>
                            </select>
                        </form>
                    </td>
                
                    <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                    <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                    
                    <td>
                        <a asp-action="Details" asp-controller="Orders" asp-route-id="@item.OrderId" class="btn-details">
                            Xem chi tiết
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
