    <style>
        .chat-bubble {
            position: fixed;
            bottom: 80px;
            right: 20px;
            width: 300px;
            max-height: 400px;
            background: white;
            border: 1px solid #ccc;
            border-radius: 10px;
            display: none;
            z-index: 9999;
            flex-direction: column;
            overflow: hidden;
        }

        .chat-header {
            cursor: move;
        }

        .chat-body {
            height: 200px;
            overflow-y: auto;
            background: #f9f9f9;
        }

        .chat-toggle-btn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            font-size: 24px;
            border: none;
            background: #ffc107;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            z-index: 10000;
        }

        .chat-message {
            padding: 8px 12px;
            margin: 5px;
            border-radius: 10px;
            max-width: 75%;
            clear: both;
            font-size: 14px;
        }

        .user-message {
            background-color: #dcf8c6;
            float: right;
        }

        .admin-message {
            background-color: #ffffff;
            float: left;
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const userId = '@User.FindFirst("CustomerId")?.Value ?? "0"';
            const toggleBtn = document.getElementById("chatToggleBtn");
            const chatBubble = document.getElementById("chatBubble");
            const chatBox = document.getElementById("chatBoxBubble");

            if (!toggleBtn || !chatBubble || !chatBox) return;

            // Bật tắt
            toggleBtn.addEventListener("click", function () {
                chatBubble.style.display = "flex";
                toggleBtn.style.display = "none";
            });

            window.toggleChat = function () {
                chatBubble.style.display = "none";
                toggleBtn.style.display = "block";
            };
            // Load tin nhắn cũ
            fetch(`/ChatMessages/GetMessagesByUserId`)
                .then(response => response.json())
                .then(data => {
                    data.forEach(msg => {
                        const isAdmin = msg.content.startsWith("[Admin]:");
                        const messageText = isAdmin ? msg.content.substring(8) : msg.content;
                        const messageHtml = `<div class="chat-message ${isAdmin ? 'admin-message' : 'user-message'}">
                                            ${messageText}
                                         </div>`;
                        chatBox.innerHTML += messageHtml;
                    });
                    chatBox.scrollTop = chatBox.scrollHeight;
                })
                .catch(error => console.error("Lỗi khi load tin nhắn cũ:", error));

            // SignalR
            const connection = new signalR.HubConnectionBuilder().withUrl("/chathub?userId=" + userId).build();

            connection.on("ReceiveMessage", function (content) {
                chatBox.innerHTML += `<div class="chat-message admin-message">${content}</div>`;
                chatBox.scrollTop = chatBox.scrollHeight;
            });

            connection.start().catch(console.error);

            // Gửi tin nhắn
            window.sendMessageBubble = function () {
                const msgInput = document.getElementById("userMessageBubble");
                const msg = msgInput.value.trim();
                if (!msg) return;

                connection.invoke("SendMessageFromUser", parseInt(userId), msg);
                chatBox.innerHTML += `<div class="chat-message user-message">${msg}</div>`;
                chatBox.scrollTop = chatBox.scrollHeight;

                fetch('/ChatMessages/SendMessage', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ userId: parseInt(userId), content: msg })
                }).catch(console.error);

                msgInput.value = '';
            };

            // Gửi "Cần trợ giúp"
            window.sendSupportRequest = function (type) {
                chatBox.innerHTML += `<div class="chat-message user-message">${type}</div>`;
                connection.invoke("SendMessageFromUser", parseInt(userId), `[User] ${type}`);
                setTimeout(() => {
                    chatBox.innerHTML += `<div class="chat-message admin-message">Bạn cần gì?</div>`;
                    chatBox.scrollTop = chatBox.scrollHeight;
                }, 300);
            };

            // Kéo được
            dragElement(chatBubble);

            function dragElement(elmnt) {
                const header = elmnt.querySelector(".chat-header");
                let pos1 = 0, pos2 = 0, pos3 = 0, pos4 = 0;
                if (header) {
                    header.onmousedown = dragMouseDown;
                }

                function dragMouseDown(e) {
                    e.preventDefault();
                    pos3 = e.clientX;
                    pos4 = e.clientY;
                    document.onmouseup = closeDragElement;
                    document.onmousemove = elementDrag;
                }

                function elementDrag(e) {
                    pos1 = pos3 - e.clientX;
                    pos2 = pos4 - e.clientY;
                    pos3 = e.clientX;
                    pos4 = e.clientY;
                    elmnt.style.top = (elmnt.offsetTop - pos2) + "px";
                    elmnt.style.left = (elmnt.offsetLeft - pos1) + "px";
                }

                function closeDragElement() {
                    document.onmouseup = null;
                    document.onmousemove = null;
                }
            }
        });
    </script>




