    <script>
        // Back to Top Button
        document.addEventListener("DOMContentLoaded", function () {
            const backToTopButton = document.querySelector(".back-to-top");

            window.addEventListener("scroll", function () {
                if (window.scrollY > 300) {
                    backToTopButton.classList.add("show");
                } else {
                    backToTopButton.classList.remove("show");
                }
            });

            backToTopButton.addEventListener("click", function (e) {
                e.preventDefault();
                window.scrollTo({
                    top: 0,
                    behavior: "smooth"
                });
            });
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const queryOrdersBtn = document.querySelector(".query-orders-btn");
            const queryOrdersModal = document.getElementById("queryOrdersModal");
            const searchOrdersBtn = document.getElementById("searchOrdersBtn");
            const orderResults = document.getElementById("orderResults");
            const phoneInput = document.getElementById("phoneNumber");

            // Mở modal khi click vào nút
            queryOrdersBtn.addEventListener("click", function (e) {
                e.preventDefault();
                const modal = new bootstrap.Modal(queryOrdersModal);
                modal.show();
            });

            // Xử lý tìm kiếm đơn hàng
            searchOrdersBtn.addEventListener("click", function () {
                const phoneNumber = phoneInput.value.trim();

                if (phoneNumber === "") {
                    orderResults.innerHTML = '<div class="alert alert-warning">Vui lòng nhập số điện thoại!</div>';
                    return;
                }

                // Hiển thị loading
                searchOrdersBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Đang tìm...';
                searchOrdersBtn.disabled = true;

                fetch(`/Orders/GetOrdersByPhone?phone=${phoneNumber}`)
                    .then(response => response.text())
                    .then(data => {
                        orderResults.innerHTML = data;
                    })
                    .catch(() => {
                        orderResults.innerHTML = '<div class="alert alert-danger">Không thể tìm đơn hàng!</div>';
                    })
                    .finally(() => {
                        searchOrdersBtn.innerHTML = '<i class="fas fa-search me-2"></i>Tìm kiếm';
                        searchOrdersBtn.disabled = false;
                    });
            });

            // Xử lý nhấn Enter
            phoneInput.addEventListener("keypress", function(e) {
                if (e.key === "Enter") {
                    searchOrdersBtn.click();
                }
            });
        });
    </script>

