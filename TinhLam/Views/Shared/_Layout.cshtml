    <script src="~/js/tabSwitch.js"></script>
    <script>
        $(document).ready(function () {
            $("#searchButton").click(function (event) {
                event.preventDefault(); // Ngăn form submit mặc định

                let query = $("#searchText").val().trim();
                if (query.length > 0) {
                    let url = "/Products/Search?query=" + encodeURIComponent(query);
                    window.location.href = url;
                }
            });
        });
    </script>
    <script>
        document.querySelectorAll(".tab-button").forEach(button => {
            button.addEventListener("click", () => {
                document.querySelectorAll(".tab-button").forEach(btn => {
                    btn.style.color = "#777";
                    btn.style.borderBottom = "3px solid transparent";
                });

                button.style.color = "#55161b";
                button.style.borderBottom = "3px solid #f5c808";
            });
        });
    </script>
    <script>
        // Back to Top Button
        document.addEventListener("DOMContentLoaded", function () {
            const backToTopButton = document.querySelector(".back-to-top");

            window.addEventListener("scroll", function () {
                if (window.scrollY > 300) {
                    backToTopButton.classList.add("show");
                } else {
                    backToTopButton.classList.remove("show");
                }
            });

            backToTopButton.addEventListener("click", function (e) {
                e.preventDefault();
                window.scrollTo({
                    top: 0,
                    behavior: "smooth"
                });
            });
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const queryOrdersBtn = document.querySelector(".query-orders-btn");
            const queryOrdersModal = document.getElementById("queryOrdersModal");
            const closeQueryModal = document.getElementById("closeQueryModal");
            const searchOrdersBtn = document.getElementById("searchOrdersBtn");
            const orderResults = document.getElementById("orderResults");

            // Mở modal khi click vào nút
            queryOrdersBtn.addEventListener("click", function () {
                queryOrdersModal.classList.add("show");
            });

            // Đóng modal khi click vào nút X
            closeQueryModal.addEventListener("click", function () {
                queryOrdersModal.classList.remove("show");
            });

            // Xử lý tìm kiếm đơn hàng
            searchOrdersBtn.addEventListener("click", function () {
                const phoneNumber = document.getElementById("phoneNumber").value.trim();

                if (phoneNumber === "") {
                    orderResults.innerHTML = "<p class='error-message'>Vui lòng nhập số điện thoại!</p>";
                    return;
                }

                fetch(`/Orders/GetOrdersByPhone?phone=${phoneNumber}`)
                    .then(response => response.text())
                    .then(data => {
                        orderResults.innerHTML = data;
                    })
                    .catch(() => {
                        orderResults.innerHTML = "<p class='error-message'>Không thể tìm đơn hàng!</p>";
                    });
            });
        });
    </script>
