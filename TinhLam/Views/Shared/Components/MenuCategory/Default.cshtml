@model IEnumerable<TinhLam.ViewModels.MenuCategoryVM>

<div class="col-lg-12">
    <h4 class="text-primary fw-bold mb-3">Danh mục sản phẩm</h4>
    
    <ul class="list-unstyled">
        <li class="category-item d-flex justify-content-between align-items-center py-2 px-2">
            <a href="/Categories/Category" class="text-decoration-none category-link">
                <i class="fa fa-list me-2"></i> Tất cả
            </a>
        </li>

        @foreach (var item in Model)
        {
            <li class="category-item d-flex justify-content-between align-items-center py-2 px-2">
                <a asp-controller="Categories" asp-action="Category" asp-route-id="@item.CategoryId" class="text-decoration-none category-link">
                    <i class="fa fa-gem me-2"></i> @item.CategoryName
                </a>
                <span class="badge rounded-pill text-white bg-primary px-2 py-1">@item.SoLuong</span>
            </li>
        }
    </ul>

</div>

<style>
    /* Màu sắc chủ đạo */
    .text-primary {
        color: #55161b !important;
    }

    .bg-primary {
        background-color: #f5c808 !important;
    }

    /* Danh sách danh mục */
    .category-item {
        transition: background 0.3s, transform 0.2s;
        border-bottom: 1px solid #ddd;
    }

        .category-item:last-child {
            border-bottom: none;
        }

        .category-item:hover {
            background: #fdf1cc;
            transform: translateX(5px);
        }

    .category-link {
        font-weight: 500;
        color: #55161b;
        transition: color 0.3s;
    }

        .category-link:hover {
            color: #8c2a2f;
        }
</style>
