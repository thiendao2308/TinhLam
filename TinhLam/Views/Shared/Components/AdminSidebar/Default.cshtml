@*
    Sidebar Component - Views/Shared/Components/AdminSidebar/Default.cshtml
*@

<div class="admin-sidebar">
    <h3>Quản lý Admin</h3>
    <ul>
        <li><a asp-controller="Admin" asp-action="ThongKe"><i class="fa-solid fa-chart-bar"></i> Thống kê</a></li>
        <li><a asp-controller="Categories" asp-action="Index"><i class="fa-solid fa-list"></i> Quản lý danh mục</a></li>
        <li><a asp-controller="Products" asp-action="Index"><i class="fa-solid fa-box"></i> Quản lý sản phẩm</a></li>
        <li><a asp-controller="Orders" asp-action="Index"><i class="fa-solid fa-receipt"></i> Quản lý đơn hàng</a></li>
        <li><a asp-controller="Users" asp-action="Index"><i class="fa-solid fa-users"></i> Quản lý người dùng</a></li>
        <li>
            <button type="button" class="logout-btn" onclick="handleLogout()">
                <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
            </button>
        </li>

        
    </ul>
</div>
<script>
    function handleLogout() {
        fetch('/KhachHang/DangXuat', { method: 'POST' })
            .then(response => {
                if (response.redirected) {
                    window.location.href = response.url; // Chuyển hướng sau khi đăng xuất
                }
            })
            .catch(error => console.error('Lỗi khi đăng xuất:', error));
    }
</script>
