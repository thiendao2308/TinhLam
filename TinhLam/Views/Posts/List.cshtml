@model IEnumerable<TinhLam.Models.PostListItemViewModel>  // hoặc namespace bạn đặt ViewModel


@{
    ViewData["Title"] = "Bài viết";
    Layout = "_Layout";
}

<style>
    .posts-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }
    .page-title {
        text-align: center;
        color: #55161b;
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 30px;
        border-bottom: 3px solid #f5c808;
        padding-bottom: 15px;
    }
    .posts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 25px;
        margin-top: 30px;
    }
    .post-card {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(85,22,27,0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 2px solid #f5c808;
    }
    .post-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 25px rgba(85,22,27,0.2);
    }
    .post-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-bottom: 2px solid #f5c808;
    }
    .post-image-placeholder {
        width: 100%;
        height: 200px;
        background: linear-gradient(135deg, #f5c808 0%, #55161b 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 3rem;
        border-bottom: 2px solid #f5c808;
    }
    .post-content {
        padding: 20px;
    }
    .post-title {
        font-size: 1.3rem;
        font-weight: bold;
        color: #55161b;
        margin-bottom: 10px;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .post-meta {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }
    .post-meta i {
        margin-right: 5px;
        color: #f5c808;
    }
    .post-tags {
        margin-bottom: 15px;
    }
    .post-tags span {
        background: #f5c808;
        color: #55161b;
        padding: 3px 8px;
        border-radius: 12px;
        font-size: 0.8rem;
        margin-right: 5px;
        margin-bottom: 5px;
        display: inline-block;
    }
    .post-stats {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #666;
        font-size: 0.9rem;
        border-top: 1px solid #eee;
        padding-top: 10px;
    }
    .post-stats i {
        color: #f5c808;
        margin-right: 5px;
    }
    .read-more {
        background: #55161b;
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        text-decoration: none;
        font-weight: bold;
        transition: background 0.3s;
        display: inline-block;
        margin-top: 10px;
    }
    .read-more:hover {
        background: #742020;
        color: white;
        text-decoration: none;
    }
    .no-posts {
        text-align: center;
        padding: 50px;
        color: #666;
        font-size: 1.2rem;
    }
    .no-posts i {
        font-size: 4rem;
        color: #f5c808;
        margin-bottom: 20px;
        display: block;
    }
    .breadcrumb-nav {
        margin-bottom: 20px;
    }
    .breadcrumb {
        background: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-wrap: wrap;
        list-style: none;
    }
    .breadcrumb-item a {
        color: #55161b;
        font-weight: bold;
        text-decoration: none;
    }
    .breadcrumb-item.active {
        color: #888;
        font-weight: bold;
    }
</style>

<nav aria-label="breadcrumb" class="breadcrumb-nav">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Trang chủ</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Bài viết</li>
    </ol>
</nav>

<div class="posts-container">
    <h1 class="page-title">
        <i class="fas fa-newspaper"></i> Bài viết mới nhất
    </h1>

    @if (Model.Any())
    {
        <div class="posts-grid">
            @foreach (var post in Model)
            {
                <div class="post-card">
                    @if (!string.IsNullOrEmpty(post.Image))
                    {
                        <img src="~/images/posts/@post.Image" alt="@post.Title" class="post-image" />
                    }
                    else
                    {
                        <div class="post-image-placeholder">
                            <i class="fas fa-newspaper"></i>
                        </div>
                    }
                    
                    <div class="post-content">
                        <h3 class="post-title">@post.Title</h3>
                        
                        <div class="post-meta">
                            <div><i class="fas fa-user"></i> @post.Author</div>
                            <div><i class="fas fa-calendar"></i> @post.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(post.Tags))
                        {
                            <div class="post-tags">
                                @foreach (var tag in post.Tags.Split(",", StringSplitOptions.RemoveEmptyEntries).Take(3))
                                {
                                    <span>@tag.Trim()</span>
                                }
                            </div>
                        }
                        
                        <div class="post-stats">
                            <span><i class="fas fa-eye"></i> @post.ViewCount lượt xem</span>
                            <span><i class="fas fa-comments"></i> @post.CommentCount bình luận</span>
                        </div>
                        
                        <a href="@Url.Action("ViewPost", "Posts", new { id = post.PostId })" class="read-more">
                            <i class="fas fa-arrow-right"></i> Đọc tiếp
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-posts">
            <i class="fas fa-newspaper"></i>
            <p>Chưa có bài viết nào được xuất bản.</p>
        </div>
    }
</div> 