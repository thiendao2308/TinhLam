@model TinhLam.Data.User

@{
    ViewData["Title"] = "Sửa thông tin người dùng";
    Layout = "_AdminLayout";
}

<style>
    .edit-form {
        max-width: 600px;
        margin: 0 auto;
        background: #fff;
        padding: 30px;
        border-radius: 8px;
        border: 2px solid #55161b;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: bold;
        color: #55161b;
        margin-bottom: 5px;
        display: block;
    }

    .form-control {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 10px;
        font-size: 14px;
        width: 100%;
    }

    .form-control:focus {
        border-color: #f5c808;
        box-shadow: 0 0 0 0.2rem rgba(245, 200, 8, 0.25);
    }

    .form-actions {
        text-align: center;
        margin-top: 30px;
    }

    .btn {
        padding: 10px 20px;
        font-weight: bold;
        border-radius: 5px;
        text-decoration: none;
        cursor: pointer;
        border: none;
        transition: all 0.3s ease;
        margin: 5px;
    }

    .btn-primary {
        background-color: #f5c808;
        color: black;
    }

    .btn-primary:hover {
        background-color: #55161b;
        color: white;
    }

    .btn-secondary {
        background-color: #55161b;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #722025;
    }

    .text-danger {
        color: #dc3545;
        font-size: 12px;
        margin-top: 5px;
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .form-check-input {
        width: 18px;
        height: 18px;
    }

    .form-check-label {
        margin: 0;
        color: #55161b;
        font-weight: bold;
    }
</style>

<h1 style="color: #55161b; text-align: center; margin-bottom: 20px;">Sửa thông tin người dùng</h1>

<div class="edit-form">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserId" />
        
        <div class="form-group">
            <label asp-for="Role" class="control-label">Vai trò</label>
            <select asp-for="Role" class="form-control">
                <option value="User">User</option>
                <option value="Admin">Admin</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <div class="form-check">
                <input asp-for="HieuLuc" class="form-check-input" type="checkbox" />
                <label asp-for="HieuLuc" class="form-check-label">
                    Tài khoản hoạt động
                </label>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
