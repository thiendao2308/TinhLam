@model IEnumerable<TinhLam.Data.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "_AdminLayout";
}

<h1>Danh sách người dùng</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Vai trò</th>
            <th>Điểm thưởng</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Username</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Role</td>
                <td>@item.RewardPoints</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.UserId">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>

