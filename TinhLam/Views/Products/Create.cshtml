@model TinhLam.Data.Product

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Tên sản phẩm</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Đơn giá</label>
                <div class="input-group">
                    <input id="priceInput" class="form-control" type="text"  />
                    <span class="input-group-text">VND</span>
                </div>
                <input type="hidden" asp-for="Price" id="priceHidden" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockQuantity" class="control-label">Số lượng nhập</label>
                <input asp-for="StockQuantity" class="form-control" type="number" min="1" />
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả sản phẩm</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Hình ảnh</label>
                <input type="file" id="imageInput" name="ImageFile" class="form-control" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger"></span>

                <!-- Xem trước ảnh -->
                <div class="mt-2">
                    <img id="imagePreview" src="#" alt="Xem trước ảnh" class="img-thumbnail d-none" style="max-width: 150px;" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Chọn size tay (tối đa 3 size)</label>
                <div id="sizeOptions">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="SizeOption" value="14" id="size14">
                        <label class="form-check-label" for="size14">14mm</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="SizeOption" value="16" id="size16">
                        <label class="form-check-label" for="size16">16mm</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="SizeOption" value="18" id="size18">
                        <label class="form-check-label" for="size18">18mm</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="SizeOption" value="20" id="size20">
                        <label class="form-check-label" for="size20">20mm</label>
                    </div>
                </div>
                <span class="text-danger d-none" id="sizeError">Bạn chỉ có thể chọn tối đa 3 size!</span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Danh mục</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Chọn danh mục --</option> <!-- Tùy chọn mặc định -->
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @* Validate số *@
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const priceInput = document.getElementById("priceInput");
            const priceHidden = document.getElementById("priceHidden");
            const stockInput = document.getElementById("StockQuantity");

            // Format giá tiền (có dấu chấm phân cách ngàn)
            priceInput.addEventListener("input", function () {
                let value = priceInput.value.replace(/\D/g, ""); // Chỉ giữ lại số
                if (value === "") {
                    priceHidden.value = "";
                    priceInput.value = "";
                    return;
                }
                let formatted = new Intl.NumberFormat("vi-VN").format(value);
                priceInput.value = formatted;
                priceHidden.value = value; // Gửi số nguyên không có dấu chấm lên server
            });

            // Ngăn nhập số lượng nhỏ hơn 1
            stockInput.addEventListener("input", function () {
                if (stockInput.value < 1) {
                    stockInput.value = 1;
                }
            });
        });
    </script>


    @* Hình ảnh *@
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const imageInput = document.getElementById("imageInput");
            const imagePreview = document.getElementById("imagePreview");

            // Khi người dùng chọn ảnh, hiển thị ảnh xem trước
            imageInput.addEventListener("change", function () {
                if (imageInput.files && imageInput.files[0]) {
                    let reader = new FileReader();
                    reader.onload = function (e) {
                        imagePreview.src = e.target.result;
                        imagePreview.classList.remove("d-none");
                    };
                    reader.readAsDataURL(imageInput.files[0]);
                }
            });
        });
    </script>

    @* Size Tay *@
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sizeOptions = document.querySelectorAll("#sizeOptions input[type='checkbox']");
            const sizeError = document.getElementById("sizeError");

            sizeOptions.forEach(checkbox => {
                checkbox.addEventListener("change", function () {
                    let selectedSizes = Array.from(sizeOptions).filter(cb => cb.checked);

                    if (selectedSizes.length > 3) {
                        this.checked = false; // Hủy bỏ chọn nếu vượt quá 3
                        sizeError.classList.remove("d-none"); // Hiện lỗi
                    } else {
                        sizeError.classList.add("d-none"); // Ẩn lỗi nếu hợp lệ
                    }
                });
            });
        });
    </script>
}
