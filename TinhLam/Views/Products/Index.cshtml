@model IEnumerable<TinhLam.Data.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "_AdminLayout";
}

<h1 class="page-title">Danh sách sản phẩm</h1>

<div class="action-bar">
    <a asp-action="Create" class="btn btn-add">Thêm sản phẩm</a>
</div>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Đơn giá (VND)</th>
                <th>Số lượng</th>
                <th>Mô tả</th>
                <th>Hình ảnh</th>
                <th>Kích thước</th>
                <th>Trạng thái</th>
                <th>Danh mục</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@string.Format("{0:N0}", item.Price)</td>
                    <td>@item.StockQuantity</td>
                    <td class="description">@item.Description</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="@Url.Content("~/images/" + item.Image)" alt="@item.ProductName" class="img-thumbnail" />
                        }
                        else
                        {
                            <span>Không có ảnh</span>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.SizeOption))
                        {
                            var sizes = item.SizeOption.Split(',');
                            <ul>
                                @foreach (var size in sizes)
                                {
                                    <li>@size cm</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>Không có</span>
                        }
                    </td>
                    <td>
                        <span class="@(item.IsActive ?? false ? "status-active" : "status-inactive")">
                            @(item.IsActive ?? false ? "Đang bán" : "Ngừng bán")
                        </span>
                    </td>
                    <td>@(item.Category?.CategoryName ?? "Không có")</td>
                    <td class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-edit">Sửa</a>
                        <a asp-action="Details" asp-controller="Products" asp-route-id="@item.ProductId" class="btn btn-details">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-delete">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .page-title {
        font-size: 24px;
        font-weight: bold;
        color: #55161b;
        margin-bottom: 20px;
        text-align: center;
    }

    .action-bar {
        text-align: right;
        margin-bottom: 15px;
    }

    .btn-add {
        background-color: #f5c808;
        color: black;
        padding: 10px 15px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        text-decoration: none;
        cursor: pointer;
    }

        .btn-add:hover {
            background-color: #55161b;
            color: white;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #ddd;
        background: white;
    }

        .table th {
            background: #55161b;
            color: white;
            padding: 10px;
            text-align: center;
        }

        .table td {
            padding: 10px;
            text-align: center;
            vertical-align: middle;
        }

    .img-thumbnail {
        max-width: 80px;
        height: auto;
        border-radius: 5px;
    }

    .description {
        max-width: 150px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    .status-active {
        color: green;
        font-weight: bold;
    }

    .status-inactive {
        color: red;
        font-weight: bold;
    }

    .action-buttons {
        display: flex;
        gap: 5px;
        justify-content: center;
    }

    .btn {
        padding: 5px 8px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 5px;
        text-decoration: none;
        cursor: pointer;
        border: none;
        display: inline-block;
    }

    .btn-edit {
        background-color: #ffc107;
        color: black;
    }

        .btn-edit:hover {
            background-color: #e0a800;
        }

    .btn-details {
        background-color: #17a2b8;
        color: white;
    }

        .btn-details:hover {
            background-color: #138496;
        }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }
</style>
